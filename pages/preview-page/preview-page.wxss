/* pages/preview-page/preview-page.wxss */
#btnflex {
 width: 100%;
}
.rel {
 position: relative;
}
.abs {
 position: absolute;
}
.top-left {
 top: 15rpx;
 left: 15rpx;
}
.bottom-box {
  padding: 50rpx;
}
.pad {
 padding: 10rpx 10rpx;
}
.select-box {
  padding: 50rpx;
}
.radiusg {
 border-radius: 15rpx
}
.borderg {
 border-color:lightblue;
 border-width: 5rpx;
 border-style: solid;
}
.active {
 border: 2px solid yellow;
}
.select-btn {
  width: 200rpx;
  height: 200rpx;
  padding: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: cover;
}
.button {
  font-family: 'Concert One', 'BenMo';
  font-size: 40rpx;
  font-weight: 500;
  /* display: inline-flex; */
  justify-content: center;
  align-items: center;
  background: rgba(125, 0, 163, 0.763);
  box-shadow: 0 3px 2px 0 rgba(0,0,0,0.1);
  border-radius: 10px;
  height: 60px;
  width: 180px;
  padding: 0 10px;
  color: #fff;
  /* text-transform: uppercase; */
  line-height: 1.2;
  text-decoration: none;
  transition: background .2s, transform .2s, box-shadow .2s;
  will-change: transform;
}
.btn-hover {
  background: darken(#C06C84,10%);
  box-shadow: 0 4px 17px rgba(0,0,0,0.2);
  transform: translate3d(0, 5px, 0);
}

.submit-pos {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 50rpx;
}

.font {
  font-family: 'Concert One', 'BenMo';
  font-style: cursive;
  font-weight: 400;
}

.font-36{
  font-size: 36px;
}
.font-26 {
  font-size: 26px;
}
.font-20 {
  font-size: 20px;
}
.font-18 {
  font-size: 18px;
}
