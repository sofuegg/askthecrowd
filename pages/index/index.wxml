<view>
<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
    <view slot="backText">Back</view>
    <view slot="content">Ask the Crowd</view>
</cu-custom>

<scroll-view scroll-x class="bg-white nav sticky">
  <view class="flex text-center">
    <view class="cu-item flex-sub {{index==TabCur?'text-orange cur':''}}" wx:for="{{navbaricon}}" wx:key bindtap="tabSelect" data-id="{{index}}">
      <image class="img" src="{{item.icon}}"></image>
    </view>
  </view>
</scroll-view>
</view>


<view class="page rel m-top">
  <block wx:for="{{questions}}" wx:for-item="question">
  <view class="cu-bar bg-white margin-top">
    <view class="action">
      <view class="padding margin-left-lg" >{{question.title}}</view>
    </view>
  </view>
  <view class="bg-img bg-mask padding-tb-xl flex justify- center align-center" style="background-image: url('{{question.photo}}'); height: 414rpx;">
    <view class="text-sl text-white">{{question.choice_text}}</view>
    <view class="padding-xl text-white">
      <view class="padding-xs text-xl">
    </view>
      <view class="padding-xs"></view>
    </view>
  </view>

<view class="cu-bar bg-white flex solid-bottom padding justify-around" >
  
<view class="cu-avatar xl radiusg borderg shadow-blur-lg {{toggleactive1}}" data-qid="{{question.id}}" style="background-image:url({{question.choice_info[0].photo}});" data-text="{{question.choice_info[0].text}}" data-url="{{question.choice_info[0].photo}}" bindtap="SwitchImage1">
  </view>

  <view class="cu-avatar xl radiusg borderg shadow-blur-lg {{toggleactive2}}" data-qid="{{question.id}}" style="background-image:url({{question.choice_info[1].photo}});" data-text="{{question.choice_info[1].text}}" data-url="{{question.choice_info[1].photo}}" bindtap="SwitchImage2">
  </view>

 
</view>

<view class="cu-bar bg-white flex solid-bottom padding justify-around" >
<button class="cu-btn block bg-blue margin-top-lg margin-bottom-sm lg justify-center"  type="">Choose</button>
  
</view>
  </block>


  <block wx:for="{{questions}}" wx:for-item="question">
    <view class="card-product"  >
      <h2>{{question.title}}</h2>
<!-- question.photo is a url, which is a string -->      
      <ol>{{question.photo}}</ol> 
<!-- here is a button to vote, which will trigger the action createAnswer -->
      <button class="btn btn-flat" bindtap="newAnswer" data-id="{{question.id}}" data-choice_id="{{question.choice_info[0].id}}">Vote A</button>
<!-- photo, text and stats for the first choice -->
      <ol>{{question.choice_info[0].photo}} </ol>
      <ol>{{question.choice_info[0].text}}</ol> 
      <ol>{{question.percentage_one}}</ol>
<!-- here is a button to vote, which will trigger the action createAnswer -->
      <button class="btn btn-flat" bindtap="newAnswer" data-id="{{question.id}}" data-choice_id="{{question.choice_info[1].id}}">Vote B</button>
<!-- photo, text and stats for the second choice -->
      <ol>{{question.choice_info[1].photo}}</ol>
      <ol>{{question.choice_info[1].text}}</ol>
      <ol>{{question.percentage_two}}</ol>
    </view>
  </block>

  <view class="div-fixed width bg-gray d-flex justify-around">
    <button class="cu-btn bg-blue lg" bindtap="goToAsk">Ask a Question!</button>
  </view>

</view>

