<view>
  <cu-custom bgColor="bg-gradual-pink" class="topbar" isBack="{{false}}">
    <view slot="backText">
      <text class="font font-20">Back</text>
    </view>
    <view slot="content">
      <text class="font">Ask the Crowd 问群众</text>
    </view>
  </cu-custom>
<scroll-view scroll-x class="bg-white nav sticky">
  <view class="flex text-center">
    <view class="cu-item flex-sub {{index==TabCur?'text-black cur':''}}" wx:for="{{navbaricon}}" wx:key bindtap="tabSelect" data-id="{{index}}">
      <view class="column flex align-center justify-center">
      <image style="margin-top: 10rpx;" class="img" src="{{item.icon}}"></image>
      <text style="margin: -25rpx;" class="text-sm font">{{item.title}}</text>
      </view>
    </view>
  </view>
</scroll-view>
</view>

<view class="page rel m-top shadow">
  
    <block wx:for="{{questions}}" wx:for-item="question">
    <view class="card bradius">
      <view class="cu-bar bg-white bradius-top">  
        <view class="action flex justify-center width">
          <view class="padding text-xl font line-height" >{{question.title}}</view>
        </view>
      </view>
      <view class="bg-img padding-tb-xl flex justify-center align-center" style="background-image: url('{{question.photo ? question.photo : 'https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1566219256408&di=a37943a37730803c1fc2f78c7ddf4158&imgtype=0&src=http%3A%2F%2Fdata.whicdn.com%2Fimages%2F2446679%2Flarge.jpg'}}'); height: 450rpx; background-color: #FFFFFF;">
        <view class="text-sl text-white font padding width text-center text-shadow">{{question.choice_text ? question.choice_text : ""}}</view>
      </view>

      <view class="cu-bar bg-white flex solid-bottom padding justify-around" >
        <view class="cu-avatar xl radiusg borderg shadow-blur-lg {{question.grow ? 'grow' : '' }} {{toggleactive1}}" data-qid="{{question.id}}" data-choice_id="{{question.choice_info[0].id}}" style="background-image:url({{question.choice_info[0].photo ? question.choice_info[0].photo : 'https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1566219256408&di=a37943a37730803c1fc2f78c7ddf4158&imgtype=0&src=http%3A%2F%2Fdata.whicdn.com%2Fimages%2F2446679%2Flarge.jpg'}});" data-text="{{question.choice_info[0].text}}" data-url="{{question.choice_info[0].photo }}" bindtap="SwitchImage1">
          <text class="font text-sl text-shadow-black">A</text>
        </view>
        <view class="font text-sl">OR</view>
        <view class="cu-avatar xl radiusg borderg shadow-blur-lg {{toggleactive2}}" data-qid="{{question.id}}" data-choice_id="{{question.choice_info[1].id}}" style="background-image:url({{question.choice_info[1].photo ? question.choice_info[1].photo : 'https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1566219256408&di=a37943a37730803c1fc2f78c7ddf4158&imgtype=0&src=http%3A%2F%2Fdata.whicdn.com%2Fimages%2F2446679%2Flarge.jpg'}});" data-text="{{question.choice_info[1].text}}" data-url="{{question.choice_info[1].photo}}" bindtap="SwitchImage2">
          <text class="font text-sl text-shadow-black">B</text>
        </view>
      </view>

      <view class="cu-bar bg-white flex solid-bottom justify-around width bradius-bottom">
        <view class="kind-list__item">
          <view class="weui-flex kind-list__item-hd justify-center">
            <button data-id="{{question.id}}" class=" font cu-btn block bg-blue margin-bottom-sm lg justify-center weui-flex__item margin {{question.open ? 'hidden abs' : ''}}" bindtap="kindToggle" disabled="{{disabled}}" style="width:120rpx">Vote</button>
          </view>
          <view class="kind-list__item-bd {{question.open ? 'kind-list__item-bd_show' : ''}}">
            <view class="weui-cells {{question.open ? 'weui-cells_show' : ''}}">
            <!-- <wux-circle class="axis-0 {{display}}" size="80" data-qid="{{question.id}}" percent="{{ question.percentage_one }}">{{ question.percentage_one + '%' }}</wux-circle>
            <wux-circle class="axis-0 {{display}}" size="80" data-qid="{{question.id}}" percent="{{ question.percentage_two }}">{{ question.percentage_two + '%' }}</wux-circle> -->

              <view class="cu-progress radius striped active margin" style="height:70rpx;width:550rpx">
                <view class="bg-olive font" style="font-size:45rpx;width:{{loading?question.percentage_one + '%':''}};">{{question.percentage_one}}%</view>
                <view class="bg-cyan font" style="font-size:45rpx;width:{{loading?question.percentage_two + '%':''}};">{{question.percentage_two}}%</view>
              </view>
              
            </view>
          </view>
        </view>
      </view>
    </view>
    </block>


  <view class="div-fixed width d-flex justify-around align-center axis" style= "left:0;">
    <button class="button flex align-center" hover-class="btn-hover" bindtap="goToAsk">Ask a Question!</button>
  </view>

</view>
