font-weight: normal;
font-style: normal;
}

.font {
  font-family: 'Concert One', 'BenMo';
  font-style: cursive;
  font-weight: 400;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.div-fixed {
  position: fixed;
  height: 90px;
  bottom: 0;
  width: 100%;
}
.d-flex {
  display: flex;
}
.button {
  font-family: 'Concert One', 'BenMo';
  font-size: 40rpx;
  font-weight: 500;
  display: inline-flex;
  justify-content: center;
  align-items: center !important;
  background: rgb(135, 0, 177);
  /* box-shadow: 0 3px 2px 0 rgba(0,0,0,0.1); */
  box-shadow: 0 4px 17px rgba(0,0,0,0.2);
  border-radius: 10px;
  height: 60px;
  width: 180px;
  padding: 3px 12px;
  color: #fff;
  text-transform: uppercase;
  line-height: 1.2;
  text-decoration: none;
  transition: background .1s, transform .1s, box-shadow .1s;
  will-change: transform;
}
.btn-hover {
  background: darken(#C06C84,10%);
  box-shadow: 0 6px 25px rgba(0,0,0,0.3);
  transform: translate3d(0, 3px, 0);
}
.line-height {
  line-height: 1.3;
}
.text-shadow-black {
	text-shadow: 0rpx 0rpx 25rpx black;
}
